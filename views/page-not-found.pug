extends layout.pug

block content
	.wrapper.error-container
		.box.error-content
			h1 Page Not Found
			
			h2 Error 404
			
			.error-message
				p= error.message
			
			.error-action
				p Don't worry, let's get you back on track.
				a.btn-link(href="/") Return to Home Page
			
			.error-details
				if error.stack && process.env.NODE_ENV !== 'production'
				pre.error-stack= error.stack
